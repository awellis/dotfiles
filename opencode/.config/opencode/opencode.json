{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://localhost:1234/v1"
      },
      "models": {
        "openai/gpt-oss-20b": {
          "name": "gpt-oss-20b"
        },
        "qwen/qwen3-coder-30b": {
          "name": "qwen3-coder-30b"
        }
      }
    }
  },
  "agent": {
    "build": {
      "mode": "primary",
      "description": "Primary coding agent with full tool access",
      "permission": {
        "bash": {
          "*": "ask",
          "git status *": "allow",
          "git diff *": "allow",
          "git log *": "allow"
        }
      }
    },
    "plan": {
      "mode": "primary",
      "description": "Planning agent - read-only exploration and design",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "compaction": {
    "auto": true,
    "prune": true
  },
  "share": "manual",
  "autoupdate": true
}
